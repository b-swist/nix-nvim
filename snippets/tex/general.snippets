snippet document "basic document template"
	\\documentclass{${1:article}}

	\\usepackage[utf8]{inputenc}
	\\usepackage[T1]{fontenc}

	\\begin{document}
		$0
	\\end{document}

snippet up "usepackage"
	\\usepackage{$1}

snippet begin "insert new environment" wA
	\\begin{$1}
		$0
	\\end{$1}

snippet chap "chapter" bA
	\\chapter{$1}

snippet sec "section" bA
	\\section{$1}

snippet sub "subsection" bA
	\\subsection{$1}

snippet ssub "subsubsection" bA
	\\subsubsection{$1}
